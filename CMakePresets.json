{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 21,
		"patch": 0
	},
	"configurePresets": [
		{
			"name":        "debug",
			"displayName": "Debug Config",
			"description": "Use this preset to debug mkpsxiso.",
			"binaryDir":   "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "Debug"
			}
		},
		{
			"name":        "release",
			"displayName": "Release Config",
			"description": "Use this preset to build mkpsxiso.",
			"binaryDir":   "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": "Release"
			}
		}
	],
	"buildPresets": [
		{
			"name":            "release",
			"configurePreset": "release",
			"configuration":   "Release"
		}
	],
	"packagePresets": [
		{
			"name":            "release",
			"configurePreset": "release"
		}
	],
	"workflowPresets": [
		{
			"name":        "ci",
			"description": "This preset is used by GitHub Actions to build mkpsxiso.",
			"steps": [
				{
					"type": "configure",
					"name": "release"
				},
				{
					"type": "build",
					"name": "release"
				},
				{
					"type": "package",
					"name": "release"
				}
			]
		}
	]
}
